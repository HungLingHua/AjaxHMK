@{
    ViewData["Title"] = "HMK1";
}

<h4>【作業一】改用 jQuery 完成JSON資料讀取並顯示在表格中的練習</h4>
<br />
<table id="employeesTable" class="table table-bordered">
    <thead>
        <tr>
            <th>姓名</th>
            <th>年資</th>
            <th>薪水</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts{
    <script>
        //作業一
        const emp = {
            "employees": [
                { "name": "Tom", "workYears": 3, "salary": 35000 },
                { "name": "Jack", "workYears": 5, "salary": 40000 },
                { "name": "Mary", "workYears": 7, "salary": 45000 }
            ]
        };


        const Empdatas = emp.employees.map(theEmp => {
            const { name, workYears, salary } = theEmp;
            return (
                `<tr>
                                <td>${name}</td>
                                <td>${workYears}</td>
                                <td>${salary}</td>
                                </tr>
                                `
            )
        })

        $('#employeesTable>tbody').html(Empdatas.join(""));

    </script>
}

